{
  "name": "elint",
  "version": "2.0.1",
  "description": "A easy way to lint your code.",
  "main": "src/index.js",
  "bin": {
    "elint": "./bin/cli.js"
  },
  "scripts": {
    "test": "npm run test:lint && npm run test:unit && npm run test:system",
    "test:lint": "eslint --format codeframe \"+(bin|src|test)/**/*.js\" --fix",
    "test:unit": "jest --config test/unit/jest.config.js",
    "test:system": "jest --config test/system/jest.config.js --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x-orpheus/elint.git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslintconfig",
    "stylelint",
    "commitlint",
    "standard",
    "jshint",
    "lint",
    "linter",
    "husky",
    "hooks",
    "git hooks"
  ],
  "author": {
    "name": "keenwon",
    "email": "semanwmj@gmail.com",
    "url": "http://keenwon.com"
  },
  "license": "MIT",
  "files": [
    "bin",
    "scripts",
    "src"
  ],
  "bugs": {
    "url": "https://github.com/x-orpheus/elint/issues"
  },
  "homepage": "https://github.com/x-orpheus/elint#readme",
  "engines": {
    "node": ">=10.12.0"
  },
  "dependencies": {
    "@commitlint/core": "^12.1.1",
    "boxen": "^5.0.1",
    "chalk": "^4.1.1",
    "commander": "^7.2.0",
    "configstore": "^5.0.1",
    "debug": "^4.3.1",
    "eslint": "^7.25.0",
    "execa": "^5.0.0",
    "figures": "^3.2.0",
    "find-process": "^1.4.4",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.3",
    "husky": "^2.7.0",
    "is-npm": "^5.0.0",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.4",
    "ms": "^2.1.3",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "semver": "^7.3.5",
    "staged-git-files": "^1.2.0",
    "stylelint": "~13.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5"
  },
  "ava": {
    "files": [
      "test/system/**/*.spec.js"
    ],
    "timeout": "600s",
    "failFast": true,
    "verbose": true
  }
}
