{
  "private": true,
  "scripts": {
    "clean": "pnpm -r run clean",
    "build": "pnpm --workspace-concurrency=1 --filter=elint run build && pnpm -r --filter=!elint run build",
    "prepare": "elint prepare",
    "preinstall": "npx only-allow pnpm",
    "commit": "elint lint commit && pnpm run lint",
    "lint": "elint lint \"packages/**/*\" \"!**/test-preset\" --no-notifier --cache",
    "start": "node --loader ts-node/esm packages/elint/src/cli/index.ts lint \"packages/**/*\" \"!**/test-preset\" --no-notifier --cache",
    "test:unit:elint": "pnpm --filter elint run test:unit",
    "test:system": "pnpm --filter elint run test:system",
    "test": "pnpm -r run test:unit && pnpm run test:system",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@jest/globals": "^29.7.0",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.13",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.50",
    "cross-env": "^7.0.3",
    "elint": "workspace:*",
    "elint-preset-self": "workspace:*",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
