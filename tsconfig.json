{
  "compilerOptions": {
    "module": "NodeNext",
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "NodeNext",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "verbatimModuleSyntax": false
  },
  "include": ["packages"],
  "exclude": ["dist", "node_modules"],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
